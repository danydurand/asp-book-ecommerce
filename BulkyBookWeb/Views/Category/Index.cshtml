@model IEnumerable<Category> 
@{
    ViewData["Title"] = "Categories";
}

<div class="container p-3">
    <div class="row p-2">
        <div class="col-6">
            <h3 class="text-primary">Category List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped table-responsive" style="width:100%">
        <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Display Order</th>
            <th>Created At</th>
            <th class="text-center">Actions</th>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>@obj.CreatedAt</td>
                    <td class="text-center">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

